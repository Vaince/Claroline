{% form_theme form 'ClarolineCoreBundle::form_theme_bootstrap3.html.twig' %}

<form class="form-inline" method="POST" action="{{ path('icap_dropzone_document', {'resourceId': dropZone.id, 'documentType': documentType, 'dropId': drop.id}) }}">

    <div class="form-group">
        {{ form_row(form.document, {'label_col_size': ' ', 'input_col_size': ' ', 'attr': {'placeholder': (documentType~'_placeholder')|trans}, 'label_attr': {'class': 'sr-only'} }) }}
    </div>

    <div class="form-group pull-right">
        <a href="{{ path('icap_dropzone_drop', {'resourceId': dropZone.id}) }}" class="btn btn-default cancel-inline">{{ 'Cancel'|trans }}</a>
        <button type="submit" class="btn btn-primary">
            {{ 'Add'|trans }}
        </button>
    </div>
    {{ form_errors(form) }}
{{ form_end(form) }}
